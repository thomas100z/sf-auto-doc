<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>dot_in_website</fullName>
    <active>true</active>
    <errorConditionFormula>and( 
not(isblank( Website )),
 NOT(CONTAINS(Website, &quot;.&quot;))
)</errorConditionFormula>
    <errorMessage>That is not a valid website</errorMessage>
</ValidationRule>
